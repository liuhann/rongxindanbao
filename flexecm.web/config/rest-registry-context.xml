	<bean id="http.registry" class="com.ever365.rest.HttpServiceRegistry">
	    <property name="injectedServices">
	        <list>
	            <!-- 
	            <ref bean="rest.seller"/>
	            <ref bean="rest.repository"/>
	            <ref bean="rest.faceted"/>
	            <ref bean="rest.public"/>
	            <ref bean="rest.manage"/>
	            <ref bean="rest.authority"/>
	             <ref bean="rest.hufen"></ref>
	             <ref bean="rest.gift"></ref>
	             <ref bean="rest.collect"></ref>
	             -->
	             <!-- 
	            <ref bean="rest.repost"/>
	            <ref bean="oauth.weibo"/>
	             -->
	            <ref bean="fin.service"/>
	            <ref bean="dido.service"/>
	            <ref bean="common.media"/>
	            <ref bean="probbo.service"/>
	        </list>
	    </property>
	</bean>

	<bean id="commonDataSource" class="com.ever365.mongo.LocalMongoDataSource">
	    <property name="db">
	    	<value>common</value>
	    </property>
	</bean>
	
	<bean id="fileStore" class="com.ever365.common.LocalContentStore">
		<property name="localPath" value="/data/content"></property>
	</bean>
	
	<bean id="didoDataSource" class="com.ever365.mongo.LocalMongoDataSource">
	    <property name="db">
	    	<value>dido</value>
	    </property>
	</bean>
	
	<bean id="rest.cookie" class="com.ever365.rest.CookieService">
	    <property name="dataSource">
			<ref bean="commonDataSource"/>	         
	     </property>
	</bean>
	
	<bean id="autoIncrementingHelper" class="com.ever365.mongo.AutoIncrementingHelper">
  		<property name="dataSource" ref="commonDataSource"></property>
  	</bean>
	 
	<bean id="common.media" class="com.ever365.common.MediaService">
		 <property name="dataSource">
			<ref bean="didoDataSource"/>	         
	     </property> 
	       <property name="contentStore">
	         <ref bean="fileStore"/>
	     </property>
	</bean>
	
	 <bean id="dido.service" class="com.ever365.dido.DidoService">
		 <property name="dataSource">
			<ref bean="didoDataSource"/>	         
	     </property>
	 </bean>
	
	<bean id="fin.service" class="com.ever365.fin.FinanceService">
		 <property name="dataSource">
			<ref bean="didoDataSource"/>	         
	     </property> 
	     <property name="contentStore">
	         <ref bean="fileStore"/>
	     </property>
	</bean>
	
	<bean id="probbo.service" class="com.ever365.open.ProbboService">
	     <property name="dataSource">
			<ref bean="didoDataSource"/>	         
	     </property> 
	</bean>
</beans>
