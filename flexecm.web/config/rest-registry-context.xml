<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!--
	<import resource="classpath:ecm-service-context.xml"/> 
	<import resource="classpath:sale-service-context.xml"/>
	 -->

	<!-- 
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">  
        <property name="location" value="classpath:config.properties"/>  
    </bean>
     --> 
	
	<bean id="http.registry" class="com.ever365.rest.HttpServiceRegistry">
	    <property name="injectedServices">
	        <list>
	            <!-- 
	            <ref bean="rest.seller"/>
	            <ref bean="rest.repository"/>
	            <ref bean="rest.faceted"/>
	            <ref bean="rest.public"/>
	            <ref bean="rest.manage"/>
	            <ref bean="rest.authority"/>
	             <ref bean="rest.hufen"></ref>
	             <ref bean="rest.gift"></ref>
	             <ref bean="rest.collect"></ref>
	             -->
	             <!-- 
	            <ref bean="rest.repost"/>
	             -->
	             <ref bean="fin.service"/>
	            <ref bean="oauth.weibo"/>
	            <ref bean="dido.service"/>
	            <ref bean="comment.service"/>
	        </list>
	    </property>
	</bean>
	
	<bean id="rest.authority" class="com.ever365.auth.AuthorityService">
	     <property name="dataSource">
			<ref bean="mongoDataSource"/>	         
	     </property>
	     <property name="authProviders">
	         <map>
	             <entry key="/weibo">
					<ref bean="oauth.weibo"/>
	             </entry>
	         </map>
	     </property>
	     
	</bean>
	
	<bean id="rest.cookie" class="com.ever365.rest.CookieService">
	    <property name="dataSource">
			<ref bean="mongoDataSource"/>	         
	     </property>
	</bean>
	
	<bean id="oauth.weibo" class="com.ever365.auth.WeiboOAuthProvider">
	    <property name="dataSource">
			<ref bean="mongoDataSource"/>	         
	     </property>
	</bean>
	
	
	<bean id="autoIncrementingHelper" class="com.ever365.mongo.AutoIncrementingHelper">
  		<property name="dataSource" ref="mongoDataSource"></property>
  	</bean>
	
	<bean id="mongoDataSource" class="com.ever365.mongo.LocalMongoDataSource">
	    <property name="db">
	    	<value>laina</value>
	    </property>
	</bean>
	
	<bean id="fileStore" class="com.ever365.common.LocalContentStore">
	 	<property name="localPath" value="/data/content"></property>
	 </bean>
	 
	 <bean id="dido.service" class="com.ever365.dido.DidoService">
		 <property name="dataSource">
			<ref bean="didoDataSource"/>	         
	     </property> 
	 </bean>
	
	<bean id="didoDataSource" class="com.ever365.mongo.LocalMongoDataSource">
	    <property name="db">
	    	<value>dido</value>
	    </property>
	</bean>
	
	<bean id="comment.service" class="com.ever365.comment.CommentFriendService">
		<property name="weiboOAuthProvider">  
			<ref bean="oauth.weibo"/>
		</property>
		<property name="mongoDataSource">
			<ref bean="didoDataSource"/>	    
		</property>
	</bean>
	
	<bean id="fin.service" class="com.ever365.fin.FinanceService">
		 <property name="dataSource">
			<ref bean="didoDataSource"/>	         
	     </property> 
	     <property name="contentStore">
	         <ref bean="fileStore"/>
	     </property>
	</bean>
</beans>
